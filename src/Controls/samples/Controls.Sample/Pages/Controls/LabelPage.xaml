<views:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.LabelPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Label">
    <views:BasePage.Content>
        <VerticalStackLayout
            Margin="12">
            <Label
                Text="Default"
                Style="{StaticResource Headline}"/>
            <Label
                Text="Label"/>
            <Label
                Text="TextColor"
                Style="{StaticResource Headline}"/>
            <Label
                TextColor="Red"
                Text="TextColor"/>
            <Label
                Text="Custom Border"
                Style="{StaticResource Headline}" />
            <Label
                Text="Label"
                TextColor="White"
                Background="Red"
                BorderBrush="Orange"
                BorderWidth="4"
                BorderShape="12, 0, 0, 24" />
        </VerticalStackLayout>
    </views:BasePage.Content>
</views:BasePage>