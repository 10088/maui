<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.BrushesPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Brushes">
    <ScrollView>
        <StackLayout     
            Margin="12">
            <Label 
                Text="SolidColorBrush"
                FontAttributes="Bold" />
            <Label
                Text="SolidColorBrush (Predefined Brush)"
                Style="{StaticResource Headline}" />
            <RoundRectangle
                Fill="{x:Static Brush.Indigo}"
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120" />
            <Label
                Text="SolidColorBrush (Color)"
                Style="{StaticResource Headline}" />
            <RoundRectangle                 
                Fill="DarkBlue"
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120" />
            <Label 
                Text="SolidColorBrush (Hex)"
                Style="{StaticResource Headline}" />
            <RoundRectangle 
                Fill="#FF9988"
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120" />
            <Label 
                Text="SolidColorBrush (Property Tag Syntax)"
                Style="{StaticResource Headline}" />
            <RoundRectangle 
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <SolidColorBrush Color="LightSteelBlue" />
                </RoundRectangle.Fill>
            </RoundRectangle>
            <Label 
                Text="LinearGradientBrush"
                FontAttributes="Bold" />
            <Label 
                Text="LinearGradientBrush (Horizontal)"
                Style="{StaticResource Headline}" />
            <RoundRectangle 
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <!-- StartPoint defaults to (0,0) -->
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="Yellow"
                                      Offset="0.1" />
                        <GradientStop Color="Green"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </RoundRectangle.Fill>
            </RoundRectangle>
            <Label 
                Text="LinearGradientBrush (Vertical)"
                Style="{StaticResource Headline}" />
            <RoundRectangle 
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <!-- StartPoint defaults to (0,0) -->
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="Yellow"
                                      Offset="0.1" />
                        <GradientStop Color="Green"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </RoundRectangle.Fill>
            </RoundRectangle>
            <Label 
                Text="LinearGradientBrush (Diagonal)"
                Style="{StaticResource Headline}" />
            <RoundRectangle 
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <!-- StartPoint defaults to (0,0)      
                         Endpoint defaults to (1,1) -->
                    <LinearGradientBrush>
                        <GradientStop Color="Yellow"
                                      Offset="0.1" />
                        <GradientStop Color="Green"
                                      Offset="1.0" />
                    </LinearGradientBrush>
                </RoundRectangle.Fill>
            </RoundRectangle>
            <Label 
                Text="RadialGradientBrush"
                FontAttributes="Bold" />
            <Label 
                Text="RadialGradientBrush (Upper left)"
                Style="{StaticResource Headline}" />
            <RoundRectangle
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <!-- Radius defaults to (0.5) -->
                    <RadialGradientBrush Center="0.0,0.0">
                        <GradientStop Color="Red"
                                      Offset="0.1" />
                        <GradientStop Color="DarkBlue"
                                      Offset="1.0" />
                    </RadialGradientBrush>
                </RoundRectangle.Fill>
            </RoundRectangle>
            <Label 
                Text="RadialGradientBrush (Center)"
                Style="{StaticResource Headline}" />
            <RoundRectangle
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <!-- Center defaults to (0.5,0.5)
                         Radius defaults to (0.5) -->
                    <RadialGradientBrush>
                        <GradientStop Color="Red"
                                      Offset="0.1" />
                        <GradientStop Color="DarkBlue"
                                      Offset="1.0" />
                    </RadialGradientBrush>
                </RoundRectangle.Fill>
            </RoundRectangle>
            <Label    
                Text="RadialGradientBrush (Lower right)"
                Style="{StaticResource Headline}" />
            <RoundRectangle 
                CornerRadius="12"
                HeightRequest="120"
                WidthRequest="120">
                <RoundRectangle.Fill>
                    <!-- Radius defaults to (0.5) -->
                    <RadialGradientBrush Center="1.0,1.0">
                        <GradientStop Color="Red"
                                      Offset="0.1" />
                        <GradientStop Color="DarkBlue"
                                      Offset="1.0" />
                    </RadialGradientBrush>
                </RoundRectangle.Fill>
            </RoundRectangle>
        </StackLayout>
    </ScrollView>
</ContentPage>